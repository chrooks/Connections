{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: PyTest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${workspaceFolder}/backend/tests/"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Start Backend Local Server",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": ["run"],
      "python": "${workspaceFolder}/backend/.venv/bin/python",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development",
        "DATABASE_URL": "sqlite:////home/chrooks/projects/Connections/backend/connectionsdb.db"
      },
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend/src/"
    },
    {
      "name": "Start Frontend Local Serve",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/frontend"
    }
  ]
}
