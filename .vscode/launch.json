{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: PyTest",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["${workspaceFolder}/backend/tests/"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Start Backend",
      "type": "python",
      "request": "launch",
      "program": "app.py",
      "justMyCode": true,
      "cwd": "${workspaceFolder}/backend/src/"
    },
    {
      "name": "Start Frontend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/frontend/src/index.js",
      "cwd": "${workspaceFolder}/frontend"
    }
  ]
}
