		{
			"name": "Game Management",
			"item": [
				{
					"name": "Generate New Game",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Extract gameId from response and save to collection variable",
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.gameId) {",
									"    pm.collectionVariables.set('gameId', jsonData.data.gameId);",
									"    console.log('Game ID saved:', jsonData.data.gameId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/connections/generate-grid",
							"host": ["{{baseUrl}}"],
							"path": ["connections", "generate-grid"]
						},
						"description": "Creates a new game session with a randomly generated grid of 16 words organized into 4 connection groups. Returns a unique game ID that should be used for subsequent API calls."
					},
					"response": [
						{
							"name": "Success - Game Created",
							"originalRequest": {
								"method": "GET",
								"url": {
									"raw": "{{baseUrl}}/connections/generate-grid",
									"host": ["{{baseUrl}}"],
									"path": ["connections", "generate-grid"]
								}
							},
							"status": "Created",
							"code": 201,
							"body": "{\n  \"data\": {\n    \"gameId\": \"a1b2c3d4-e5f6-7890-abcd-ef1234567890\"\n  }\n}"
						},
						{
							"name": "Error - Failed to Generate",
							"originalRequest": {
								"method": "GET",
								"url": {
									"raw": "{{baseUrl}}/connections/generate-grid",
									"host": ["{{baseUrl}}"],
									"path": ["connections", "generate-grid"]
								}
							},
							"status": "Internal Server Error",
							"code": 500,
							"body": "{\n  \"error\": \"Failed to generate the game grid.\"\n}"
						}
					]
				},
