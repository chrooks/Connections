{
	"info": {
		"_postman_id": "connections-game-api-collection",
		"name": "Connections Game API",
		"description": "API collection for the Connections word puzzle game backend. This API allows you to create games, submit guesses, check game status, and manage game sessions.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000",
			"type": "string"
		},
		{
			"key": "gameId",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Welcome Message",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/",
							"host": ["{{baseUrl}}"],
							"path": [""]
						},
						"description": "Returns a welcome message confirming the API is running."
					},
					"response": [
						{
							"name": "Success",
							"originalRequest": {
								"method": "GET",
								"url": {
									"raw": "{{baseUrl}}/",
									"host": ["{{baseUrl}}"],
									"path": [""]
								}
							},
							"status": "OK",
							"code": 200,
							"body": "{\n  \"data\": {\n    \"message\": \"Welcome to the Connections game API!\"\n  }\n}"
						}
					]
				}
			]
